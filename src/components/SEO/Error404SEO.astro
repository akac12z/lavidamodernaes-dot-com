---
import { SITE_DEFAULT_CONFIG } from "./siteInfo";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const ogImg = new URL("./calvario-og404.png", Astro.site);
const ogImgAlt =
  "Imagen del calvario porque la p√°gina de lavidamodernaes.com no existe";
---

<title>{SITE_DEFAULT_CONFIG.title}</title>
<meta content={SITE_DEFAULT_CONFIG.title} name="title" />
<meta name="description" content={SITE_DEFAULT_CONFIG.description} />
<meta content={SITE_DEFAULT_CONFIG.author} name="author" />

<link rel="canonical" href={canonicalURL} />

<meta property="og:title" content={SITE_DEFAULT_CONFIG.title} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:description" content={SITE_DEFAULT_CONFIG.description} />
<meta content={SITE_DEFAULT_CONFIG.title} property="og:site_name" />
<meta content="es" property="og:locale" />
<meta property="og:image" content={ogImg} />
<meta property="og:image:alt" content={ogImgAlt} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:locale" content="es" />

<meta property="og:type" content="website" />

{/* Twitter */}
<meta name="twitter:title" content={SITE_DEFAULT_CONFIG.title} />
<meta name="twitter:description" content={SITE_DEFAULT_CONFIG.description} />
<meta name="twitter:image" content={ogImg} />
<meta name="twitter:image:alt" content={ogImgAlt} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@akac12z" />
<meta name="twitter:creator" content="@akac12z" />
